<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="2dp"
    android:background="@color/white"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/imageRecyclerCartItem"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_gravity="center"

        android:src="@drawable/snack1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRecyclerCartName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"

                android:text="Snack Name hahahhahahahahaahhahahah"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/buttonDeleteMyCart"
                android:layout_width="70px"
                android:layout_height="70px"

                android:src="@drawable/ic_delete"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textRecyclerCartPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:text="Rp55000"
            android:textColor="@color/navy"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/decrementRecyclerCart"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:textColor="@color/white"
                android:text="-"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textRecyclerCartQty"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"

                android:inputType="number"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/incrementRecyclerCart"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:textColor="@color/black"
                android:text="+"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>