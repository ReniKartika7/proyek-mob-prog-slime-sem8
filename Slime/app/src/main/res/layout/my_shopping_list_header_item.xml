<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="400px"
    android:layout_marginVertical="10dp"
    android:background="@color/white"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textShoppingHeaderDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Date Time"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textShoppingHeaderTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"

            android:text="Total Price : "
            android:textColor="@color/navy"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textShoppingHeaderItemsPurchased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="1 items purchased"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textShoppingHeaderViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="View Detail"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_next_black"
            android:textSize="16sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:src="@drawable/slime_logo"/>
</LinearLayout>